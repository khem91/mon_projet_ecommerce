{% extends 'base.html.twig' %}

{% block body %}

<section>
<div class="container py-5">
      <div class="row">
          <div class="col-12 mb-3">
            <h3 class="text-center">{{ category.name }}</h3>
          </div>

              {% for product in category.products %}

              <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
                  <div class="card">
                  <img src="{{ product.image }}" class="card-img-top imageCard" alt="image_produit">
                  <div class="card-body ">
                      <h5 class="card-title ">{{ product.name }}</h5>
                      <p>{{ product.description}}</p>
                      <p>{{ product.price | priceEuro }}</p>
                      <a href="{{ path('boutique_product_detail',{'id': product.id}) }}" class="btn btn-dark w-100">Consulter</a>
                  </div>
                  </div> 
          
              </div> 
              
              {% endfor %}
 
      </div>


      </section>
  </div>


      
      </div>
    </div>
  </div>
  {% endblock %}
