{% extends 'base.html.twig' %}

{% block body %}

<div class="container py-5">
    <section>
      <div class="row">
          <div class="col-12">
            <h3 class="text-center">Les catégories</h3>
          </div>

              {% for category in categories %}

              <div class="col-sm-12 col-md-6 col-lg-4 mt-3">

                  <div class="card">
                  <div class="card-body ">
                      <h5 class="card-title ">{{ category.name }}</h5>
                      <a href="{{ path('boutique_product_category',{'id': category.id} )}}" class="btn btn-dark w-100">Consulter</a>
                  </div>
                  </div> 
          
              </div> 
              
              {% endfor %}

      </div>

      </section>

      <section>

      <div class="row">
          <div class="col-12 mt-3">
            <h3 class="text-center">Les nouveautés</h3>
          </div>

              {% for product in products %}

              <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
                  <div class="card">
                  <img src="{{ product.image }}" class="card-img-top imageCard" alt="image_produit">
                  <div class="card-body ">
                      <h5 class="card-title ">{{ product.name }}</h5>
                      <p>{{ product.description}}</p>
                      <p>{{ product.price | priceEuro }}</p>
                      <a href="{{ path('boutique_product_detail',{'id': product.id}) }}" class="btn btn-dark w-100">Consulter</a>
                  </div>
                  </div> 
          
              </div> 
               
              {% endfor %}

      </div>


      </section>
  </div>


      
      </div>
    </div>
  </div>
  {% endblock %}
